<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/activity_bg2"
    android:layout_height="match_parent">
    <com.mao.baseapp.common.ui.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        app:tb_title_color="@color/app_color"
        app:tb_title="咨询"
        app:tb_show_back="false"
        app:tb_bg_color="@color/bar_bg_dark"
        android:layout_height="@dimen/title_bar_height" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/app_color"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="10dp"
        android:text="免费咨询时间为9:00-24:30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:background="#f7f7f7"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/btn_help"
            android:layout_width="150dp"
            android:text="免费咨询"
            android:textColor="@color/white"

            android:background="@drawable/com_sel_btn_app_gray_full_radius"
            android:layout_height="43dp" />
    </LinearLayout>
</LinearLayout>

