
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg2"
    android:layout_height="match_parent">

    <com.mao.baseapp.common.ui.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tb_title="设置"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/activity_bg2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mao.baseapp.common.ui.widget.FromItem
                android:id="@+id/fi_logout"
                app:fi_show_arrow="false"
                android:layout_marginTop="@dimen/from_item_marginTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/from_item_height"
                app:fi_left_text="退出登录"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
