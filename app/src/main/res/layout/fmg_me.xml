<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/activity_bg2"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/app_color">
        </LinearLayout>

        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_left_text="我的钱包"/>

        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_collection"
            android:layout_marginTop="@dimen/from_item_marginTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_left_text="收藏"/>
        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_show_top_line="false"
            app:fi_left_text="下载"/>
        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_show_top_line="false"
            app:fi_left_text="分享"/>

        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_about"
            android:layout_marginTop="@dimen/from_item_marginTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_left_text="关于观心"/>
        <com.mao.baseapp.common.ui.widget.FromItem
            android:id="@+id/fi_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/from_item_height"
            app:fi_show_top_line="false"
            app:fi_left_text="设置"/>
    </LinearLayout>
</ScrollView>

