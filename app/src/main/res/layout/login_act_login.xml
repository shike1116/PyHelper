<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/big_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_marginTop="43dp"
                android:layout_marginBottom="43dp"
                android:textColor="@color/txt_black"/>

            <LinearLayout
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="67dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColorHint="#8e9091"
                        android:background="@null"
                        android:textSize="15dp"
                        android:maxLength="11"
                        android:digits="0123456789"
                        android:paddingRight="20dp"
                        android:inputType="number"
                        android:singleLine="true"
                        android:gravity="left"
                        android:hint="请输入你的手机号"/>

                    <TextView
                        android:id="@+id/tv_get_code"
                        android:layout_width="wrap_content"
                        android:text="获取验证码(60s)"
                        android:textSize="12dp"
                        android:background="@drawable/com_sel_btn_app_gray_full_radius"
                        android:textColor="@color/white"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/link_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="17dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#8e9091"
                        android:background="@null"
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:paddingRight="20dp"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:hint="请输入验证码"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/link_gray"/>

                <LinearLayout

                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_login_admin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="咨询师登录"
                        android:textSize="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/com_sel_btn_app_gray_full_radius"
                        android:textColor="@color/white"
                        android:layout_height="43dp" />
                    <Button
                        android:id="@+id/btn_login_user"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="用户登录"
                        android:textSize="15dp"
                        android:background="@drawable/com_sel_btn_app_gray_full_radius"
                        android:textColor="@color/white"
                        android:layout_height="43dp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_log_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="注册观心默认同意《用户使用条例》"
                android:gravity="center"

                android:layout_marginBottom="16dp"/>
        </LinearLayout>



    </RelativeLayout>


</ScrollView>
